<h1>edit profile</h1>
<%= form_for @auth, :url => '/profile' do |f| %>
  <div class='field'>
    <%= label_tag :tagline %>
    <%= f.text_field :tagline %>
  </div>
  <div class='field'>
    <%= label_tag :age %>
    <%= f.number_field :age %>
  </div>
  <div class='field'>
    <%= label_tag :gender %>
    <%= f.text_field :gender %>
  </div>
  <div class='field'>
    <%= label_tag :city %>
    <%= f.text_field :city %>
  </div>
  <div class='field'>
    <%= label_tag :state %>
    <%= f.text_field :state %>
  </div>
  <div class='field'>
    <%= label_tag :ethnicity %>
    <%= f.text_field :ethnicity %>
  </div>
  <div class='field'>
    <%= label_tag :description %>
    <%= f.text_area :description %>
  </div>
  <div class='field'>
    <%= label_tag :password %>
    <%= f.password_field :password %>
  </div>
  <div class='field'>
    <%= label_tag :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class='field'>
    <%= f.submit %>
  </div>
<% end %>
